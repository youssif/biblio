<% if current_user != nil %>
  <h1>Listing books</h1>


  <table>
    <tr>
      <th>Author</th>
      <th>Title</th>
      <th>ISBN</th>
      <th>Book Cover</th>
      <th></th>
      <th></th>
    </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.author %></td>
      <td><%= book.title %></td>
      <td><%= book.isbn %></td>
      <td class="cover"><%= image_tag(book.cover) %></td>
      <td class="crud"><%= link_to 'Show', book %></td>
      <td class="crud"><%= link_to 'Edit', edit_book_path(book) %></td>
      <td class="crud"><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>


  <br />

  <%= link_to 'Add a new book', new_book_path, class: "btn btn-large" %>

<% else %>
  
  <center>
  <div class = "sign_in">
    <h1 class="sign_title">Log in or Register Today!</h1>
      <div class="links">
        <%= link_to 'Login', new_user_session_path %> |
        <%= link_to 'Register', new_user_registration_path %>
      </div>
  </div>
  </center>

<% end %>

